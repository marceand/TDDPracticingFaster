<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="6dp"
                                    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_photo"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/yellow"/>

        <TextView
            android:id="@+id/text_likes_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Likes:"
            android:layout_below="@+id/image_photo"
            android:layout_alignParentStart="true"
            android:padding="6dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_likes_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/text_likes_label"
            android:layout_below="@+id/image_photo"
            android:padding="6dp"
            tools:text="22"/>

        <TextView
            android:id="@+id/text_comment_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comments:"
            android:layout_toEndOf="@+id/text_likes_data"
            android:layout_below="@+id/image_photo"
            android:padding="6dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_comment_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/text_comment_label"
            android:layout_below="@+id/image_photo"
            android:padding="6dp"
            tools:text="24"/>

        <TextView
            android:id="@+id/text_favorite_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="favorites: "
            android:textStyle="bold"
            android:layout_toEndOf="@+id/text_comment_data"
            android:layout_below="@+id/image_photo"
            android:padding="6dp"/>

        <TextView
            android:id="@+id/text_favorite_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/text_favorite_label"
            android:layout_below="@+id/image_photo"
            android:padding="6dp"
            tools:text="8"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>